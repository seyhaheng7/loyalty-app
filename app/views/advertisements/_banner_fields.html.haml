.nested-fields
  .col-xs-6.col-sm-3.col-md-3
    .image-uploader{align: 'center'}
      %a{:href => "#!"}
        = image_tag f.object.image, class: 'img-responsive', size: '150x150'
      = f.input :image, as: :file, label: 'Upload Store Banner',
        :label_html => { class: 'btn btn-default'}
      = f.hidden_field :image_cache
      %p
        (700 x 300)

      %div
        = link_to_remove_association fa_icon('trash'), f, class: 'btn btn-danger'
      %br
