= simple_form_for(@advertisement) do |f|
  = f.error_notification

  .form-body
    .form-group
      = f.input :name
      .image-uploader
        %a{:href => "#!"}
          = image_tag f.object.banner, class: 'img-responsive', size: '150x150'
        = f.input :banner, as: :file, label: 'Upload Banner',
          :label_html => { class: 'btn btn-default'}
        = f.hidden_field :banner_cache

      = f.input :active
      = f.input :for_page
      = f.input :lat
      = f.input :long
      = f.input :address
      = f.input :phone
      = f.input :website
      = f.input :start_date
      = f.input :end_date

      = f.button :submit
      .pull-right
        = link_to advertisements_path, class: 'btn btn-success' do
          Back
        = link_to @advertisement, class: 'btn btn-primary' do
          Show