.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => advertisements_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-pie-chart
      Listing Advertisements
    .pull-right
      -if policy(@grid.assets).new?
        = link_to new_advertisement_path, class: 'btn btn-primary' do
          = fa_icon 'plus'
          Add New Advertisement
  .portlet-body
    .table-scrollable
      = datagrid_table @grid
    .text-center
      = paginate(@grid.assets)