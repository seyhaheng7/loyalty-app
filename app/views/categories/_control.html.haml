-if policy(category).show?
  = link_to category, class: 'btn btn-success' do
    = fa_icon 'eye'
    Show
-if policy(category).edit?
  = link_to [:edit, category], class: 'btn btn-primary' do
    = fa_icon 'pencil'
    Edit
-if policy(category).destroy?
  = link_to category, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete