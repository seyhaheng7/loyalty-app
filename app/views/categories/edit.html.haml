.portlet.light.bordered

  .portlet-title
    .caption
      Editing Category

  .portlet-body.form
    = render 'form'
    %br
    = link_to categories_path, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      Back
    = link_to @category, class: 'btn btn-success' do
      = fa_icon 'eye'
      Show