= render 'partials/page-head', title: 'Listing Claimed Rewards'

.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => claimed_rewards_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-diamond 
      Claimed Reward
  .portlet-body
    .table-scrollable
      = datagrid_table @grid
    .text-center
      = paginate(@grid.assets)