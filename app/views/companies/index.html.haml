= render 'partials/page-head', title: 'Listing Companies'

.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => companies_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-briefcase
      Companies
    .pull-right
      -if policy(@grid.assets).new?
        = link_to new_company_path, class: 'btn btn-primary' do
          = fa_icon 'plus'
          Add New Company
  .portlet-body
    .table-scrollable
      = datagrid_table @grid
    .text-center
      = paginate(@grid.assets)