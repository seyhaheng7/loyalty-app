.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show company
          .actions
            .btn-group.btn-group-devided
              = link_to edit_company_path(@company), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to companies_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
              = link_to @company, method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Delete
        .portlet-body.form
          %dt Name:
          %dd= @company.name
          %dt Address:
          %dd= @company.address
          %dt Point rate:
          %dd= @company.point_rate
          %dt Logo:
          %dd= image_tag @company.logo_url, class: 'img-responsive'
          %dt Category:
          %dd= @company.category.name
