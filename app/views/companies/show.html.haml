= render 'partials/page-head', title: 'Show Company'
.portlet.light.bordered
  .portlet-title
    .caption
      = @company.name
          
  .portlet-body
    %table.table
      %col{width: '10'}
      %col{width: '350'}
      %tr
        %th Logo:
        %td= image_tag @company.logo_url, size: '150x150'
      %tr
        %th Name:
        %td= @company.name

      %tr
        %th Address:
        %td= @company.address
      %tr
        %th Point rate:
        %td= @company.point_rate
      %tr
        %th Category:
        %td= @company.category.name
      %tr
        %th Partner:
        %td= @company.partner

    %br
    -if policy(@company).index?
      = link_to companies_path, class: 'btn btn-default' do
        = fa_icon 'chevron-left'
        Back
    -if policy(@company).edit?
      = link_to [:edit, @company], class: 'btn btn-primary' do
        = fa_icon 'pencil'
        Edit
    -if policy(@company).destroy?
      = link_to @company, method: :delete, data: {confirm: 'Are you sure?'} ,class: 'btn btn-danger' do
        = fa_icon 'trash'
        Delete