= render 'partials/page-head', title: 'Listing Customer Chat Supports'

.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => customer_chat_supports_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-users
      Customer Chat Support
  .portlet-body
    .table-scrollable
      = datagrid_table @grid
    .text-center
      = paginate(@grid.assets)