- if grid.html_columns(*options[:columns]).any?
  .portlet.box.green
    .portlet-title
      .caption
        = fa_icon 'users'
        User Table
    .portlet-body.flip-scroll
      = content_tag :table, options[:html].merge(class: 'table table-bordered table-stripped table-condensed flip-content') do
        %thead.flip-content
          = datagrid_header(grid, options)
        %tbody
          - if assets.any?
            = datagrid_rows(grid, assets, options)
          - else
            %tr
              %td.noresults{:colspan => "100%"}= I18n.t('datagrid.no_results').html_safe
- else
  = I18n.t("datagrid.table.no_columns").html_safe
