- if grid.html_columns(*options[:columns]).any?
  = content_tag :table, options[:html].merge(class: "table table-hover #{options.fetch(:html, {}).fetch(:class)}") do
    %thead.flip-content
      = datagrid_header(grid, options)
    %tbody
      - if assets.any?
        = datagrid_rows(grid, assets, options)
      - else
        %tr
          %td.noresults{:colspan => "100%"}
            No Records Found
- else
  = I18n.t("datagrid.table.no_columns").html_safe
