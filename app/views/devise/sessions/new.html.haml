= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  
  %h3.form-title.font-green Sign In

  .form-inputs
    = f.input :email, required: false, autofocus: true
    = f.input :password, required: false

  .form-actions

    / Submit Form [Button]
    = f.submit 'Login', class: 'btn green uppercase'

    / Remeber Me [Check Box]
    %label.rememberme.check.mt-checkbox.mt-checkbox-outline
      = f.check_box :remember_me, as: :boolean if devise_mapping.rememberable?
      Remember
      %span

    / Forgot Password [Link]
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      = link_to "Forgot password?", new_password_path(resource_name), id: 'forget-password', class: 'forget-password'

  / Sign Up [Link]
  .create-account
    %p
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "Create an Account", new_registration_path(resource_name), class: 'uppercase'
