.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show guide
          .actions
            .btn-group.btn-group-devided
              = link_to edit_guide_path(@guide), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to guides_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
        .portlet-body.form
          %dt Title:
          %dd= @guide.title
          %iframe{:align => "center", :name => "window", :src => "#{@guide.embed_url}", :height => "150px;", :width => "250px;", :style => "float:left;margin-top:30px;"}



