.portlet.light.bordered

  .portlet-title
    .caption
      Editing Location

  .portlet-body.form
    = render 'form'
    %br
    -if policy(@location).index?
      = link_to locations_path, class: 'btn btn-default' do
        = fa_icon 'chevron-left'
        Back
    -if policy(@location).show?
      = link_to @location, class: 'btn btn-success' do
        = fa_icon 'eye'
        Show