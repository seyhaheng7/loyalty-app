.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase
              Show location
          .actions
            .btn-group.btn-group-devided

              = link_to locations_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
              = link_to edit_location_path(@location), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to @location, method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Delete
                
        .portlet-body.form
          %dt Name:
          %dd= @location.name
          %dt Description:
          %dd= @location.description
