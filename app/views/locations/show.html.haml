= render 'partials/page-head', title: 'Show Location'
.portlet.light.bordered
  .portlet-title
    .caption
      = @location.name
          
  .portlet-body
    %table.table
      %col{width: '10'}
      %col{width: '350'}
      %tr
        %th Name:
        %td= @location.name
      %tr
        %th Description:
        %td= @location.description

    %br
    = link_to locations_path, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      Back
    = link_to [:edit, @location], class: 'btn btn-primary' do
      = fa_icon 'pencil'
      Edit
    = link_to @location, method: :delete, data: {confirm: 'Are you sure?'} ,class: 'btn btn-danger' do
      = fa_icon 'trash'
      Delete