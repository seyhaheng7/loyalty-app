-if policy(merchant_chat_support).show?
  = link_to merchant_chat_support, class: 'btn btn-info' do
    = fa_icon 'eye'
    Show
-if policy(merchant_chat_support).edit?
  = link_to [:edit, merchant_chat_support], class: 'btn btn-default' do
    = fa_icon 'pencil'
    Edit
-if policy(merchant_chat_support).destroy?
  = link_to merchant_chat_support, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete