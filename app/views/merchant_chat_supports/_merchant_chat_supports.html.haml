- @merchant_chat_supports.decorate.each do |merchant_chat_support|
  %li
    .row
      .col-xs-6.col-md-1
        = image_tag merchant_chat_support.merchant_avatar, size: '50x50', class: 'img-circle'

      .col-xs-6.col-md-6.chat-title
        = link_to merchant_chat_support.merchant do
          = merchant_chat_support.merchant_name
        %h6.chat-text
          = merchant_chat_support.last_message

      .col-xs-12.col-md-5.text-right
        = link_to merchant_chat_support, class: merchant_chat_support.apply_class_chat_btn, id: "chat-now-btn-#{merchant_chat_support.id}" do
          %i.fa.fa-comments
          Chat Now
