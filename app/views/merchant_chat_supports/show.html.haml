= render 'partials/page-head', title: 'Chat Support'
.portlet.light.bordered
  .portlet-title
    .caption
      = image_tag @merchant_chat_support.merchant_avatar, size: '50x50', class: 'img-circle'
      = @merchant_chat_support.merchant_name

  .portlet-body
    #merchant-chat-supports-list
      %ul#chat-data{'data-room-id' => @merchant_chat_support.id}
      
    %hr
    = render 'message_form'
