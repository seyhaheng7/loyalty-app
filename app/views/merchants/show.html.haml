= render 'partials/page-head', title: 'Show merchant'

.portlet.light.bordered
  .portlet-title
    .caption




  .portlet-body
    %table.table
      %col{width: '10'}
      %col{width: '350'}
      %tr
        %th Avatar:
        %td= image_tag @merchant.avatar_url, size: '150x150'
      %tr
        %th Name:
        %td= @merchant.name
      %tr
        %th Email:
        %td= @merchant.email
      %tr
        %th Phone:
        %td= @merchant.phone
      %tr
        %th Store:
        %td= @merchant.store_name

    %br
    = link_to merchants_path, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      Back
    = link_to [:edit, @merchant], class: 'btn btn-primary' do
      = fa_icon 'pencil'
      Edit
    = link_to @merchant, method: :delete, data: {confirm: 'Are you sure?'} ,class: 'btn btn-danger' do
      = fa_icon 'trash'
      Delete