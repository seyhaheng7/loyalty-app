.page-header.navbar.navbar-fixed-top

  / BEGIN HEADER INNER
  .page-header-inner

    / BEGIN LOGO
    .page-logo
      %a{:href => "index.html"}
        %img.logo-default{:alt => "logo", :src => "/assets/logo-light.png"}
      .menu-toggler.sidebar-toggler
    / DOC: Remove the above "hide" to enable the sidebar toggler button on header
    / END LOGO

    / BEGIN RESPONSIVE MENU TOGGLER
    %a.menu-toggler.responsive-toggler{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :href => "javascript:;"}
    / END RESPONSIVE MENU TOGGLER

    / BEGIN PAGE ACTIONS
    / DOC: Remove "hide" class to enable the page header actions
    .page-actions
      .btn-group
        %button.btn.red-haze.btn-sm.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :type => "button"}
          %span.hidden-sm.hidden-xs ActionsÂ 
          %i.fa.fa-angle-down
        %ul.dropdown-menu{:role => "menu"}
          %li
            %a{:href => "javascript:;"}
              %i.icon-share
              Share
          %li.divider
          %li
            %a{:href => "javascript:;"}
              %i.icon-flag
              Comments
              %span.badge.badge-success 4
    / END PAGE ACTIONS

    / BEGIN PAGE TOP
    .page-top
      / BEGIN HEADER SEARCH BOX
      / DOC: Apply "search-form-expanded" right after the "search-form" class to have half expanded search box
      %form.search-form{:action => "page_general_search_2.html", :method => "GET"}
        .input-group
          %input.form-control.input-sm{:name => "query", :placeholder => "Search...", :type => "text"}/
          %span.input-group-btn
            %a.btn.submit{:href => "javascript:;"}
              %i.icon-magnifier
      / END HEADER SEARCH BOX
      / BEGIN TOP NAVIGATION MENU
      .top-menu
        %ul.nav.navbar-nav.pull-right
          %li.separator.hide
          / BEGIN NOTIFICATION DROPDOWN
          / DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
          / DOC: Apply "dropdown-hoverable" class after "dropdown" and remove data-toggle="dropdown" data-hover="dropdown" data-close-others="true" attributes to enable hover dropdown mode
          / DOC: Remove "dropdown-hoverable" and add data-toggle="dropdown" data-hover="dropdown" data-close-others="true" attributes to the below A element with dropdown-toggle class
          %li#header_notification_bar.dropdown.dropdown-extended.dropdown-notification.dropdown-dark

            %a.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "javascript:;"}
              %i.icon-bell
              %span.badge.badge-success 7

            %ul.dropdown-menu
              %li.external
                %h3
                  %span.bold 12 pending
                  notifications
                %a{:href => "page_user_profile_1.html"} view all
              %li
                %ul.dropdown-menu-list.scroller{"data-handle-color" => "#637283", :style => "height: 250px;"}
                  %li
                    %a{:href => "javascript:;"}
                      %span.time just now
                      %span.details
                        %span.label.label-sm.label-icon.label-success
                          %i.fa.fa-plus
                        New user registered.
                  %li
                    %a{:href => "javascript:;"}
                      %span.time 3 mins
                      %span.details
                        %span.label.label-sm.label-icon.label-danger
                          %i.fa.fa-bolt
                        Server #12 overloaded.

          / END NOTIFICATION DROPDOWN
          %li.separator.hide
          / BEGIN INBOX DROPDOWN
          / DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
          %li#header_inbox_bar.dropdown.dropdown-extended.dropdown-inbox.dropdown-dark
            %a.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "javascript:;"}
              %i.icon-envelope-open
              %span.badge.badge-danger 4
            %ul.dropdown-menu
              %li.external
                %h3
                  You have
                  %span.bold 7 New
                  Messages
                %a{:href => "app_inbox.html"} view all
              %li
                %ul.dropdown-menu-list.scroller{"data-handle-color" => "#637283", :style => "height: 275px;"}
                  %li
                    %a{:href => "#"}
                      %span.photo
                        %img.img-circle{:alt => "", :src => "/assets/avatar2.jpg"}/
                      %span.subject
                        %span.from Lisa Wong
                        %span.time Just Now
                      %span.message Vivamus sed auctor nibh congue nibh. auctor nibh auctor nibh...

          / END INBOX DROPDOWN
          %li.separator.hide
          / BEGIN TODO DROPDOWN
          / DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
          %li#header_task_bar.dropdown.dropdown-extended.dropdown-tasks.dropdown-dark

            %a.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "javascript:;"}
              %i.icon-calendar
              %span.badge.badge-primary 3

            %ul.dropdown-menu.extended.tasks
              %li.external
                %h3
                  You have
                  %span.bold 12 pending
                  tasks
                %a{:href => "?p=page_todo_2"} view all
              %li
                %ul.dropdown-menu-list.scroller{"data-handle-color" => "#637283", :style => "height: 275px;"}
                  %li
                    %a{:href => "javascript:;"}
                      %span.task
                        %span.desc New release v1.2
                        %span.percent 30%
                      %span.progress
                        %span.progress-bar.progress-bar-success{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "40", :style => "width: 40%;"}
                          %span.sr-only 40% Complete

          / END TODO DROPDOWN
          / BEGIN USER LOGIN DROPDOWN
          / DOC: Apply "dropdown-dark" class after below "dropdown-extended" to change the dropdown styte
          %li.dropdown.dropdown-user.dropdown-dark

            %a.dropdown-toggle{"data-close-others" => "true", "data-hover" => "dropdown", "data-toggle" => "dropdown", :href => "javascript:;"}
              %span.username.username-hide-on-mobile= current_user.name
              = image_tag current_user.avatar, class: 'img-circle'

            %ul.dropdown-menu.dropdown-menu-default
              %li
                = link_to edit_user_path(current_user) do
                  %i.icon-user
                  My Profile
              %li
                = link_to edit_user_registration_path do
                  %i.icon-key
                  Change Password
              %li
                %a{:href => "app_calendar.html"}
                  %i.icon-calendar
                  My Calendar
              %li
                = link_to destroy_user_session_path, method: :delete do
                  %i.icon-key
                  Log Out
          / END USER LOGIN DROPDOWN
          / BEGIN QUICK SIDEBAR TOGGLER
          %li.dropdown.dropdown-extended.quick-sidebar-toggler
            %span.sr-only Toggle Quick Sidebar
            %i.icon-logout
          / END QUICK SIDEBAR TOGGLER
      / END TOP NAVIGATION MENU
    / END PAGE TOP

  / END HEADER INNER