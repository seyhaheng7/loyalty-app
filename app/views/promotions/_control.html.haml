-if policy(promotion).show?
  = link_to promotion, class: 'btn btn-info' do
    = fa_icon 'eye'
    Show
-if policy(promotion).edit?
  = link_to [:edit, promotion], class: 'btn btn-default' do
    = fa_icon 'pencil'
    Edit
-if policy(promotion).destroy?
  = link_to promotion, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete