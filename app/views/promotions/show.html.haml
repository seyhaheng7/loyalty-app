.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show promotion
          .actions
            .btn-group.btn-group-devided
              = link_to edit_promotion_path(@promotion), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to promotions_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
        .portlet-body.form
          %dt Title:
          %dd= @promotion.title
          %dt Body:
          %dd= @promotion.body.html_safe
          %dt Start date:
          %dd= @promotion.start_date
          %dt End date:
          %dd= @promotion.end_date
          %dt Image:
          %dd
            = image_tag @promotion.image_url, class: 'img-responsive'
          
