-if policy(receipt).show?
  = link_to receipt, class: 'btn btn-info' do
    = fa_icon 'eye'
    Show
-if policy(receipt).edit?
  = link_to [:edit, receipt], class: 'btn btn-default' do
    = fa_icon 'pencil'
    Edit
-if policy(receipt).destroy?
  = link_to receipt, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete