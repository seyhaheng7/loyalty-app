.portlet.light.bordered

  .portlet-title
    .caption
      Editing Receipt

  .portlet-body.form
    = render 'form'
    %br
    -if policy(@receipt).index?
      = link_to receipts_path, class: 'btn btn-default' do
        = fa_icon 'chevron-left'
        Back
    -if policy(@receipt).show?
      = link_to @receipt, class: 'btn btn-success' do
        = fa_icon 'eye'
        Show