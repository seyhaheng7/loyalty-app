= render 'partials/page-head', title: 'Listing Receipts'

.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => receipts_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-wallet
      Receipt
    .pull-right
      -if policy(@grid.assets).new?
        = link_to new_receipt_path, class: 'btn btn-primary' do
          = fa_icon 'plus'
          Add New Receipt
  .portlet-body
    .table-scrollable
      = datagrid_table @grid
    .text-center
      = paginate(@grid.assets)