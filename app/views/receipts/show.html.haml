.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show receipt
          .actions
            .btn-group.btn-group-devided
              = link_to edit_receipt_path(@receipt), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to receipts_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
              = link_to @receipt, method: :delete, data: { confirm: 'Are You Sure?' }, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Delete
        .portlet-body.form
          %dt Receipt:
          %dd= @receipt.receipt_id
          %dt Total:
          %dd= @receipt.total
          %dt Earned points:
          %dd= @receipt.earned_points
          %dt Status:
          %dd= @receipt.status
          %dt Store:
          %dd= @receipt.store.name
          %dt User:
          %dd= @receipt.user.name
          %dt Capture:
          %dd= image_tag @receipt.capture_url, class: 'img-responsive'
