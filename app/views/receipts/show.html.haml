= render 'partials/page-head', title: 'Show Receipt'
.portlet.light.bordered
  .portlet-title
    .caption
      = @receipt.receipt_id
          
  .portlet-body
    %table.table
      %col{width: '10'}
      %col{width: '350'}
      %tr
        %th Capture:
        %td= image_tag @receipt.capture_url, size: '150x150'
      %tr
        %th Receipt ID:
        %td= @receipt.receipt_id
      %tr
        %th Total:
        %td= @receipt.total
      %tr
        %th Earned Points:
        %td= @receipt.earned_points
      %tr
        %th Status:
        %td= @receipt.status
      %tr
        %th Store:
        %td= @receipt.store.name
      %tr
        %th User:
        %td= @receipt.user.name

    %br
    = link_to receipts_path, class: 'btn btn-default' do
      = fa_icon 'chevron-left'
      Back
    = link_to [:edit, @receipt], class: 'btn btn-primary' do
      = fa_icon 'pencil'
      Edit
    = link_to @receipt, method: :delete, data: {confirm: 'Are you sure?'} ,class: 'btn btn-danger' do
      = fa_icon 'trash'
      Delete
