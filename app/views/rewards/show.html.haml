.portlet.light.bordered
  .portlet-title
    .caption
      Show Reward

  .portlet-body
    %table.table
      %col{width: '10'}
      %col{width: '350'}
      %tr
        %th Image:
        %td= image_tag @reward.image_url, size: '50x50'
      %tr
        %th Name:
        %td= @reward.name
      %tr
        %th Require Point:
        %td= @reward.require_points
      %tr
        %th Quantity:
        %td= @reward.quantity
      %tr
        %th Approved:
        %td= @reward.approved_claimed_rewards_count
      %tr
        %th Remain:
        %td= @reward.quantity - @reward.approved_claimed_rewards_count
      %tr
        %th Store:
        %td
          = link_to @reward.store_name, @reward.store
      %tr
        %th Description:
        %td= @reward.description

    .row.wrap-pad
      .pull-left
        -if policy(@reward).index?
          = link_to rewards_path, class: 'btn btn-default' do
            = fa_icon 'chevron-left'
            Back
      .pull-right
        -if policy(@reward).edit?
          = link_to [:edit, @reward], class: 'btn btn-primary' do
            = fa_icon 'pencil'
            Edit
        -if policy(@reward).destroy?
          = link_to @reward, method: :delete, data: {confirm: 'Are you sure?'} ,class: 'btn btn-danger' do
            = fa_icon 'trash'
            Delete
