.portlet.light.bordered

  .portlet-title
    .caption
      Editing Sticker Group

  .portlet-body.form
    = render 'form'
    %br
    -if policy(@sticker_group).index?
      = link_to sticker_groups_path, class: 'btn btn-default' do
        = fa_icon 'chevron-left'
        Back
    -if policy(@sticker_group).show?
      = link_to @sticker_group, class: 'btn btn-success' do
        = fa_icon 'eye'
        Show