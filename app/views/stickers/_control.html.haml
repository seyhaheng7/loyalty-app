-if policy(sticker).show?
  = link_to sticker, class: 'btn btn-info' do
    = fa_icon 'eye'
    Show
-if policy(sticker).edit?
  = link_to [:edit, sticker], class: 'btn btn-default' do
    = fa_icon 'pencil'
    Edit
-if policy(sticker).destroy?
  = link_to sticker, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete