= render 'partials/page-head', title: 'Listing User'

= link_to new_user_path, class: 'btn btn-primary' do
  = fa_icon 'plus'
  Add New User

.portlet.box.green

  .portlet-title
    .caption
      = fa_icon 'users'
      User Table

  .portlet-body.flip-scroll
    %table.table.table-bordered.table-striped.table-condensed.flip-content
    
      %thead.flip-content
        %tr
          %th Avatar
          %th Name
          %th Email
          %th{:colspan => "2"} Option

      %tbody
        - @users.each do |user|
          %tr
            %td
              = image_tag (user.avatar), size: '150x150'
            %td= user.name
            %td= user.email
            %td
              = link_to user, class: 'btn btn-primary' do
                = fa_icon 'eye'
              = link_to [:edit, user], class: 'btn btn-success' do
                = fa_icon 'pencil'
              = link_to user, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
                = fa_icon 'trash'