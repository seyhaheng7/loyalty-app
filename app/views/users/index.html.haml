= render 'partials/page-head', title: 'Listing Users'

%br

.m-heading-1.border-green.m-bordered
  = datagrid_form_for @grid, :method => :get, :url => users_path

.portlet.light.bordered
  .portlet-title
    .caption
      %i.icon-user
      User
  .portlet-body
    = link_to new_user_path, class: 'btn btn-primary' do
      = fa_icon 'plus'
      Add New User
    .table-scrollable
      = paginate(@grid.assets)
      = datagrid_table @grid
      = paginate(@grid.assets)