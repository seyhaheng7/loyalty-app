-if policy(video_ad).show?
  = link_to video_ad, class: 'btn btn-info' do
    = fa_icon 'eye'
    Show
-if policy(video_ad).edit?
  = link_to [:edit, video_ad], class: 'btn btn-default' do
    = fa_icon 'pencil'
    Edit
-if policy(video_ad).destroy?
  = link_to video_ad, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger' do
    = fa_icon 'trash'
    Delete