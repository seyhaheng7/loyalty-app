.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show video_ad
          .actions
            .btn-group.btn-group-devided
              = link_to edit_video_ad_path(@video_ad), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to video_ads_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
        .portlet-body.form
          %dt Title:
          %dd= @video_ad.title
          %dt Start date:
          %dd= @video_ad.start_date
          %dt End date:
          %dd= @video_ad.end_date
          %dt Earned points:
          %dd= @video_ad.earned_points
          
          %iframe{:align => "center", :name => "window", :src => "#{@video_ad.embed_url}", :height => "150px;", :width => "250px;", :style => "float:left;margin-top:30px;"}


