.container
  .row
    .col-md-12
      .portlet.light.bordered
        .portlet-title
          .caption
            %span.caption-subject.font-dark.sbold.uppercase 
              Show <%= singular_table_name %>
          .actions
            .btn-group.btn-group-devided
              = link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-transparent dark btn-outline btn-circle btn-sm active' do
                Edit
              = link_to <%= index_helper %>_path, class: 'btn btn-transparent dark btn-outline btn-circle btn-sm' do
                Back
        .portlet-body.form
          <%- for attribute in attributes -%>
          %dt <%= attribute.human_name %>:
          %dd= @<%= singular_table_name %>.<%= attribute.name %>
          <%- end -%>